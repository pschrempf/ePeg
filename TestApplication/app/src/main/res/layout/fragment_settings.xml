<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:text="Number of trials per hand:"
            android:textSize="@dimen/info_text_size"
            android:textColor="@color/colorPrimary" />

        <NumberPicker
            android:id="@+id/trial_num_picker"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/fab_margin" />

        <Button
            android:id="@+id/turn_screen"
            android:layout_height="@dimen/button_height"
            android:layout_width="@dimen/button_width"
            android:layout_margin="@dimen/fab_margin"
            android:text="Rotate screen"
            android:onClick="turnScreen" />

        <Button
            android:id="@+id/hide_settings"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/fab_margin"
            android:text="Done"
            android:onClick="hideSettings"
            />

    </LinearLayout>

</RelativeLayout>
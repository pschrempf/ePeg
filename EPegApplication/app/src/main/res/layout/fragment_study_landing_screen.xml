<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.epeg.Study.StudyLandingScreenFragment">

    <TextView
        android:id="@+id/trial_status"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="@string/trial_info"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/info_text_size" />

    <Button
        android:id="@+id/start_trial"
        android:layout_width="363dp"
        android:layout_height="@dimen/button_height"

        android:layout_below="@+id/trial_status"
        android:layout_centerHorizontal="true"
        android:text="@string/start_button" />

    <TextView
        android:id="@+id/landing_screen_participant_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/start_trial"
        android:text="TextView" />


</RelativeLayout>

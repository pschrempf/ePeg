<resources>

    <!-- Base application theme. -->
    <style name="Theme.ePeg" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:color">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">?android:attr/colorPrimaryDark</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/button</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:height">0dp</item>
        <item name="android:width">0dp</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:minWidth">@dimen/button_width</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@color/colorPrimaryDark</item>

    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">@dimen/info_text_size</item>
    </style>

</resources>
